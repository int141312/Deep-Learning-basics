        "## SVM loss"
      ],
      "metadata": {
        "id": "snE55nJ2p-vw"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def svm(x, y, W):\n",
        "  scores = W.dot(x)\n",
        "  margins = np.max(0, scores - scores[y] + 1)\n",
        "  margins[y] = 0\n",
        "  loss_i = np.sum(margins)\n",
        "  return loss_i"
      ],
